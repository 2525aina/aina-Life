rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /pets/{petId} {
      allow read: if request.auth != null && isOwnerOrMember(petId);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && isOwnerOrMember(petId);

      match /entries/{entryId} {
        allow read, write: if request.auth != null && isOwnerOrMember(petId);
      }

      match /weights/{weightId} {
        allow read, write: if request.auth != null && isOwnerOrMember(petId);
      }

      match /members/{memberId} {
        allow read: if request.auth != null && isOwnerOrMember(petId);
        allow write: if request.auth != null && isOwner(petId);
      }

      match /friends/{friendId} {
        allow read, write: if request.auth != null && isOwnerOrMember(petId);
        match /encounters/{encounterId} {
          allow read, write: if request.auth != null && isOwnerOrMember(petId);
        }
      }
    }

    match /{path=**}/members/{memberId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.inviteEmail == request.auth.token.email);
    }

    function isOwnerOrMember(petId) {
      return exists(/databases/$(database)/documents/pets/$(petId)/members/$(request.auth.uid));
    }

    function isOwner(petId) {
      let member = get(/databases/$(database)/documents/pets/$(petId)/members/$(request.auth.uid));
      return member != null && member.data.role == 'owner';
    }
  }
}
